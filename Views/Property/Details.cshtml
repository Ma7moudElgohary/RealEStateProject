@using System.Security.Claims
@model RealEStateProject.ViewModels.Property.PropertyViewModel
@{
    ViewData["Title"] = Model.Title;
}

<div class="container-fluid mt-4">
    <!-- Property Navigation -->
    <div class="container mb-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li class="breadcrumb-item"><a asp-action="Search">Properties</a></li>
                <li class="breadcrumb-item active" aria-current="page">@Model.Title</li>
            </ol>
        </nav>
        <div class="d-flex justify-content-between align-items-center">
            <h2 class="mb-0">@Model.Title</h2>
            <div>
                @if (User.Identity.IsAuthenticated)
                {
                    <button class="btn @(ViewBag.IsFavorite ? "btn-danger" : "btn-outline-danger")" id="favoriteButton"
                            onclick="location.href='@Url.Action("ToggleFavorite", new { propertyId = Model.Id })'">
                        <i class="bi @(ViewBag.IsFavorite ? "bi-heart-fill" : "bi-heart")"></i>
                        @(ViewBag.IsFavorite ? "Remove from Favorites" : "Add to Favorites")
                    </button>
                }
                @if (Model.AgentId == User.FindFirstValue(ClaimTypes.NameIdentifier))
                {
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary ms-2">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                }
            </div>
        </div>
    </div>

    <!-- Images Carousel -->
    <div class="container">
        <div id="propertyCarousel" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                @if (Model.ImageUrls != null && Model.ImageUrls.Any())
                {
                    for (int i = 0; i < Model.ImageUrls.Count; i++)
                    {
                        <div class="carousel-item @(i == 0 ? "active" : "")">
                            <img src="@Model.ImageUrls[i]" class="d-block w-100" alt="Property Image" style="max-height: 600px; object-fit: cover;">
                        </div>
                    }
                }
                else
                {
                    <div class="carousel-item active">
                        <img src="/images/placeholder.png" class="d-block w-100" alt="No Image" style="max-height: 600px; object-fit: cover;">
                    </div>
                }
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#propertyCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#propertyCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>

    <div class="container mt-5">
        <div class="row">
            <!-- Property Details Section -->
            <div class="col-lg-8">
                <!-- Price and Status -->
                <div class="d-flex align-items-center mb-4">
                    <h3 class="text-primary mb-0">$@Model.Price.ToString("N0")</h3>
                    <span class="badge bg-success ms-3 p-2">@Model.Status</span>
                    <span class="badge bg-info ms-2 p-2">@Model.Type</span>
                </div>

                <!-- Location -->
                <p class="mb-4">
                    <i class="fa fa-map-marker-alt text-primary me-2"></i>
                    @Model.Address, @Model.City, @Model.State @Model.ZipCode
                </p>

                <!-- Quick Info -->
                <div class="row mb-5">
                    <div class="col-6 col-md-3 mb-3">
                        <div class="d-flex align-items-center">
                            <i class="fa fa-bed text-primary me-2 fa-2x"></i>
                            <div>
                                <small class="text-muted d-block">Bedrooms</small>
                                <span class="fw-bold">@Model.Bedrooms</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-6 col-md-3 mb-3">
                        <div class="d-flex align-items-center">
                            <i class="fa fa-bath text-primary me-2 fa-2x"></i>
                            <div>
                                <small class="text-muted d-block">Bathrooms</small>
                                <span class="fw-bold">@Model.Bathrooms</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-6 col-md-3 mb-3">
                        <div class="d-flex align-items-center">
                            <i class="fa fa-ruler-combined text-primary me-2 fa-2x"></i>
                            <div>
                                <small class="text-muted d-block">Area</small>
                                <span class="fw-bold">@Model.SquareFeet sqft</span>
                            </div>
                        </div>
                    </div>
                    <div class="col-6 col-md-3 mb-3">
                        <div class="d-flex align-items-center">
                            <i class="fa fa-calendar text-primary me-2 fa-2x"></i>
                            <div>
                                <small class="text-muted d-block">Year Built</small>
                                <span class="fw-bold">@Model.YearBuilt</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Description -->
                <div class="mb-5">
                    <h4 class="mb-3">Description</h4>
                    <p>@Model.Description</p>
                </div>

                <!-- Features -->
                <div class="mb-5">
                    <h4 class="mb-3">Features</h4>
                    <div class="row">
                        @if (Model.Features != null && Model.Features.Any())
                        {
                            foreach (var feature in Model.Features)
                            {
                                <div class="col-md-4 mb-2">
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-check-circle-fill text-success me-2"></i>
                                        <span>@feature</span>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="col-12">
                                <p class="text-muted">No additional features listed.</p>
                            </div>
                        }
                    </div>
                </div>

                <!-- Map -->
                <div class="mb-5">
                    <h4 class="mb-3">Location</h4>
                    <div id="propertyMap" style="height: 400px;" class="w-100 border rounded"></div>
                </div>
            </div>

            <!-- Sidebar -->
            <div class="col-lg-4">
                <!-- Agent Info -->
                <div class="card mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Agent Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            <div class="flex-shrink-0">
                                <img src="/images/agent.jpg" alt="Agent" class="rounded-circle" style="width: 60px; height: 60px;">
                            </div>
                            <div class="ms-3">
                                <h5 class="mb-0">@Model.AgentName</h5>
                                <p class="text-muted mb-0">Real Estate Agent</p>
                            </div>
                        </div>
                        <div class="mb-3">
                            <div class="d-flex align-items-center mb-2">
                                <i class="bi bi-telephone me-2"></i>
                                <span>@Model.AgentPhone</span>
                            </div>
                            <div class="d-flex align-items-center">
                                <i class="bi bi-envelope me-2"></i>
                                <span>@Model.AgentEmail</span>
                            </div>
                        </div>
                        <button class="btn btn-primary w-100">Contact Agent</button>
                    </div>
                </div>

                <!-- Similar Properties -->
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Similar Properties</h5>
                    </div>
                    <div class="card-body">
                        <p class="text-muted">Similar properties will appear here.</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Comments Section -->
        <div class="mt-5">
            <h4 class="mb-4">Comments</h4>

            <!-- Add Comment Form -->
            @if (User.Identity.IsAuthenticated)
            {
                <div class="mb-4">
                    <form asp-controller="Property" asp-action="AddComment" method="post">
                        <input type="hidden" name="PropertyId" value="@Model.Id" />
                        <div class="mb-3">
                            <textarea class="form-control" name="Content" rows="3" placeholder="Write your comment here..."></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit Comment</button>
                    </form>
                </div>
            }
            else
            {
                <div class="alert alert-info mb-4">
                    <p class="mb-2">Please log in to leave a comment.</p>
                    <a class="btn btn-primary" asp-area="Identity" asp-page="/Account/Login">Login</a>
                </div>
            }

            <!-- Comments List -->
            @if (Model.Comments != null && Model.Comments.Any())
            {
                foreach (var comment in Model.Comments)
                {
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="d-flex mb-3">
                                <div class="flex-shrink-0">
                                    <img src="/images/user.jpg" alt="User" class="rounded-circle" style="width: 40px; height: 40px;">
                                </div>
                                <div class="ms-3">
                                    <h6 class="mb-0">@comment.UserName</h6>
                                    <small class="text-muted">@comment.CreatedDate.ToString("MMMM dd, yyyy")</small>
                                </div>
                                @if (User.FindFirstValue(ClaimTypes.NameIdentifier) == comment.UserId)
                                {
                                    <div class="ms-auto">
                                        <button class="btn btn-sm btn-outline-danger delete-comment" data-comment-id="@comment.Id">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                }
                            </div>
                            <p class="mb-0">@comment.Content</p>
                        </div>
                    </div>
                }
            }
            else
            {
                <p class="text-muted">No comments yet. Be the first to comment!</p>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://maps.googleapis.com/maps/api/js?key=YOUR_API_KEY&callback=initMap" async defer></script>
    <script>
        function initMap() {
            // Replace with actual coordinates from your model
            const propertyLocation = { lat: @Model.Latitude, lng: @Model.Longitude };

            const map = new google.maps.Map(document.getElementById("propertyMap"), {
                zoom: 15,
                center: propertyLocation,
            });

            const marker = new google.maps.Marker({
                position: propertyLocation,
                map: map,
                title: "@Model.Title"
            });
        }

        // Comment delete functionality
        $(document).ready(function() {
            $('.delete-comment').on('click', function() {
                const commentId = $(this).data('comment-id');
                if (confirm('Are you sure you want to delete this comment?')) {
                    $.ajax({
                        url: '@Url.Action("DeleteComment")',
                        type: 'POST',
                        data: { commentId: commentId },
                        success: function() {
                            location.reload();
                        }
                    });
                }
            });
        });
    </script>
}