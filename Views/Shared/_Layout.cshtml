<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Aesthetic Villanueva</title>
    <!-- Favicon -->
    <link rel="icon" type="image/png" href="~/img/1.png" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RealEStateProject.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <style>
        :root {
            --primary-blue: #1a56db;
            --secondary-blue: #3b82f6;
            --light-blue: #dbeafe;
        }

        .navbar {
            background-color: var(--primary-blue) !important;
            padding: 0rem 0;
        }

        .navbar-brand {
            color: white !important;
            font-weight: bold;
            font-size: clamp(1.5rem, 4vw, 2.5rem); 
            display: flex;
            align-items: center;
        }

            .navbar-brand img {
                margin-right: 5px;
                height: clamp(60px, 8vw, 100px); 
                width: auto;
            }

        .nav-link {
            color: white !important;
            font-weight: 500;
            margin: 0 0.5rem;
            font-size: clamp(1rem, 2vw, 1.2rem); 
            transition: all 0.3s ease;
        }

            .nav-link:hover {
                color: var(--light-blue) !important;
                transform: scale(1.1); 
            }

        .navbar-toggler {
            border-color: white;
        }

        .navbar-toggler-icon {
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' width='30' height='30' viewBox='0 0 30 30'%3e%3cpath stroke='rgba(255, 255, 255, 1)' stroke-linecap='round' stroke-miterlimit='10' stroke-width='2' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e");
        }

        /* Footer styles */
        .footer {
            background-color: var(--primary-blue);
            color: white !important;
            padding: 2rem 0;
            margin-top: 2rem;
        }

            .footer a {
                color: white;
                text-decoration: none;
                transition: color 0.3s ease;
            }

                .footer a:hover {
                    color: var(--light-blue);
                    text-decoration: underline;
                }

        .footer-logo {
            max-width: 400px;
            margin-bottom: 1rem;
            margin-right:4rem;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/img/3.png" alt="Aesthetic Villanueva" height="40">
                    Aesthetic Villanueva
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Properties">Properties</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Agents">Agents</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="About">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
                        </li>
                    </ul>
                    <div class="d-flex">
                        <a class="btn btn-outline-light me-2" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                        <a class="btn btn-light" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="footer text-white">
        <div class="container">
            <div class="row py-4">
                <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
                    <img src="~/img/3.png" alt="Aesthetic Villanueva Logo" class="footer-logo">
                </div>
                <div class="col-lg-2 col-md-6 mb-4 mb-lg-0">
                    <h5 class="text-uppercase mb-4">Links</h5>
                    <ul class="list-unstyled">
                        <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li><a asp-area="" asp-controller="Home" asp-action="Properties">Properties</a></li>
                        <li><a asp-area="" asp-controller="Home" asp-action="Agents">Agents</a></li>
                        <li><a asp-area="" asp-controller="Home" asp-action="About">About Us</a></li>
                        <li><a asp-area="" asp-controller="Home" asp-action="Contact">Contact</a></li>
                    </ul>
                </div>
                <div class="col-lg-3 col-md-6 mb-4 mb-lg-0">
                    <h5 class="text-uppercase mb-4">Contact</h5>
                    <ul class="list-unstyled">
                        <li>123 Real Estate Blvd</li>
                        <li>New York, NY 10001</li>
                        <li>Phone: (555) 123-4567</li>
                        <li>Email: info@aestheticvillanueva.com</li>
                    </ul>
                </div>
                <div class="col-lg-3 col-md-6 mb-4 mb-lg-0">
                    <h5 class="text-uppercase mb-4">Newsletter</h5>
                    <p>Subscribe to receive updates on new properties and market trends.</p>
                    <div class="form-outline form-white mb-4">
                        <input type="email" class="form-control" placeholder="Email address" />
                        <button type="submit" class="btn btn-outline-light btn-block mt-2">Subscribe</button>
                        <p style="color: gold;">Your trusted partner for finding your dream home. With years of experience,<br/> we help you navigate the real estate market with confidence.</p>

                    </div>
                </div>
            </div>
            <div class="text-center p-3 border-top border-white">
                &copy; 2025 - Aesthetic Villanueva Real Estate - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>