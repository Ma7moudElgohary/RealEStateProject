@model RealEStateProject.ViewModels.User.UserProfileViewModel

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">User Profile</h3>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">
                            @TempData["SuccessMessage"]
                        </div>
                    }

                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">First Name:</div>
                        <div class="col-md-8">@Model.FirstName</div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Last Name:</div>
                        <div class="col-md-8">@Model.LastName</div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Email:</div>
                        <div class="col-md-8">@Model.Email</div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Phone Number:</div>
                        <div class="col-md-8">@Model.PhoneNumber</div>
                    </div>

                    <div class="mt-4">
                        <a asp-action="Edit" class="btn btn-primary">Edit Profile</a>
                        <a asp-action="UserDashboard" asp-controller="Dashboard" class="btn btn-secondary">Back to Dashboard</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>