@using RealEStateProject.ViewModels.Roles
@model RoleViewModel
@{
    ViewData["Title"] = "Add Role";
}

<div class="registration-container">
    <div class="registration-panel">
        <div class="panel-left">
            <div class="panel-left-content">
                <h1 class="welcome-title">Role Management</h1>
                <p class="welcome-subtitle">Create and manage user roles for your RealEstate platform.</p>

                <div class="benefits-list">
                    <div class="benefit-item">
                        <span class="benefit-icon"><i class="fas fa-user-shield"></i></span>
                        <span>Control user permissions</span>
                    </div>
                    <div class="benefit-item"> 
                        <span class="benefit-icon"><i class="fas fa-users-cog"></i></span>
                        <span>Organize user hierarchies</span>
                    </div>
                    <div class="benefit-item">
                        <span class="benefit-icon"><i class="fas fa-lock"></i></span>
                        <span>Enhance platform security</span>
                    </div>
                    <div class="benefit-item">
                        <span class="benefit-icon"><i class="fas fa-tasks"></i></span>
                        <span>Customize access levels</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Panel with Add Role Form -->
        <div class="panel-right">
            <h2 class="login-title">Add Role</h2>
            <p class="login-subtitle">Create a new role to define user permissions within the system.</p>

            <form asp-action="AddRole" method="post">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="form-floating">
                    <input asp-for="RoleName" class="form-control" id="floatingRoleName" placeholder="Role Name">
                    <label for="floatingRoleName">Role Name</label>
                    <span class="input-icon"><i class="fas fa-tag"></i></span>
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>

                <button type="submit" class="btn login-btn btn-pulse w-100 mt-3">
                    <i class="fas fa-plus-circle me-2"></i> Create Role
                </button>
            </form>

            <div class="text-center mt-4">
                <a asp-controller="Home" asp-action="Index" class="back-link">
                    <i class="fas fa-arrow-left"></i> Back to Home
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/js/all.min.js"></script>
    <script>
        // Form validation animation
        function setupFormAnimation() {
            const formFields = document.querySelectorAll('.form-control');

            formFields.forEach(field => {
                field.addEventListener('focus', () => {
                    field.parentNode.style.transform = 'translateY(-5px)';
                    field.parentNode.style.transition = 'transform 0.3s ease';
                });

                field.addEventListener('blur', () => {
                    field.parentNode.style.transform = 'translateY(0)';
                });
            });
        }

        // Initialize functions
        document.addEventListener('DOMContentLoaded', function() {
            setupFormAnimation();
        });
    </script>
}

