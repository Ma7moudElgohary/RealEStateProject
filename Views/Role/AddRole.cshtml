@using RealEStateProject.ViewModels.Roles
@model RoleViewModel
@{
    ViewData["Title"] = "Add Role";
}

<link rel="stylesheet" href="~/css/site.css" />

<div class="container my-4">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title"><i class="fas fa-plus-circle"></i> Add Role</h3>
                </div>
                <div class="card-body">
                    <form asp-action="AddRole" method="post">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="RoleName" class="form-control" id="floatingRoleName" placeholder="Role Name">
                            <label for="floatingRoleName">Role Name</label>
                            <span asp-validation-for="RoleName" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-plus-circle me-2"></i> Create Role
                            </button>
                        </div>
                    </form>

                    <div class="text-center mt-4">
                        <a asp-controller="Home" asp-action="Index" class="text-decoration-none">
                            <i class="fas fa-arrow-left"></i> Back to Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/js/all.min.js"></script>
}