                        </a>
                        <div class="card-body">
                            <div class="mb-2">
                                <span class="h5 text-primary">$@property.Price.ToString("N0")</span>
                            </div>
                            <div>
                                <span class="d-block mb-2 text-muted">@property.Address</span>
                                <span class="d-block mb-3">@property.City, @property.State</span>
                            </div>

                            <div class="d-flex justify-content-between mb-3">
