                            Discover rental properties that suit your lifestyle and budget.
                        </p>
                        <a href="@Url.Action("ForRent", "Property")" class="btn btn-link text-primary p-0">Learn More</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Recent Properties Section (Optional) -->
@if (Model.RecentProperties != null && Model.RecentProperties.Any())
{
    <section class="py-5">
        <div class="container">
            <div class="row mb-4">
                <div class="col-12">
                    <h2 class="fw-bold text-primary">Recently Added</h2>
                </div>
            </div>
            <div class="row">
                @foreach (var property in Model.RecentProperties)
                {
                    <div class="col-md-3 mb-4">
                        <div class="card h-100 shadow-sm">
                            <a href="@Url.Action("Details", "Property", new { id = property.Id })" class="text-decoration-none">
                                <img src="@(string.IsNullOrEmpty(property.FeaturedImageUrl) ? "/images/img_1.jpg" : property.FeaturedImageUrl)"
                                     class="card-img-top" alt="@property.Title" style="height: 150px; object-fit: cover;">
                            </a>
                            <div class="card-body">
                                <h5 class="card-title">@property.Title</h5>
                                <p class="text-primary mb-2">$@property.Price.ToString("N0")</p>
                                <p class="card-text small text-muted mb-0">@property.City, @property.State</p>
                                <div class="d-flex justify-content-between small mt-2">
                                    <span>@property.Bedrooms beds</span>
                                    <span>@property.Bathrooms baths</span>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
}

<!-- Call to Action Section -->
<section class="py-5 bg-primary text-white">
    <div class="container text-center">
        <h2 class="mb-4">Ready to Find Your Dream Home?</h2>
        <p class="mb-4">Let us help you find the perfect property that fits your needs and budget.</p>
        <div class="d-flex justify-content-center gap-3">
            <a asp-controller="Property" asp-action="ForSale" class="btn btn-light">Browse Properties</a>
            <a asp-controller="Home" asp-action="Contact" class="btn btn-outline-light">Contact Us</a>
        </div>
    </div>
</section>
