@model RealEStateProject.ViewModels.Common.HomeViewModel
@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section with Carousel -->
<div class="container-fluid p-0">
    <div id="heroCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="/images/hero_bg_1.jpg" class="d-block w-100" alt="Property" style="height: 60vh; object-fit: cover;">
                <div class="carousel-caption d-flex flex-column justify-content-center h-100">
                    <h1 class="display-4 fw-bold">Easiest way to find your dream home</h1>
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-md-8">
                                <form asp-controller="Property" asp-action="Search" method="get" class="d-flex mt-4">
                                    <input type="text" name="Location" class="form-control me-2" placeholder="Your ZIP code or City. e.g. New York">
                                    <button class="btn btn-primary" type="submit">Search</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <img src="/images/hero_bg_2.jpg" class="d-block w-100" alt="Property" style="height: 60vh; object-fit: cover;">
                <div class="carousel-caption d-flex flex-column justify-content-center h-100">
                    <h1 class="display-4 fw-bold">Easiest way to find your dream home</h1>
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-md-8">
                                <form asp-controller="Property" asp-action="Search" method="get" class="d-flex mt-4">
                                    <input type="text" name="Location" class="form-control me-2" placeholder="Your ZIP code or City. e.g. New York">
                                    <button class="btn btn-primary" type="submit">Search</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <img src="/images/hero_bg_3.jpg" class="d-block w-100" alt="Property" style="height: 60vh; object-fit: cover;">
                <div class="carousel-caption d-flex flex-column justify-content-center h-100">
                    <h1 class="display-4 fw-bold">Easiest way to find your dream home</h1>
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-md-8">
                                <form asp-controller="Property" asp-action="Search" method="get" class="d-flex mt-4">
                                    <input type="text" name="Location" class="form-control me-2" placeholder="Your ZIP code or City. e.g. New York">
                                    <button class="btn btn-primary" type="submit">Search</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>

<!-- Featured Properties Section -->
<section class="py-5">
    <div class="container">
        <div class="row mb-4 align-items-center">
            <div class="col-lg-6">
                <h2 class="fw-bold text-primary">Popular Properties</h2>
            </div>
            <div class="col-lg-6 text-lg-end">
                <a asp-controller="Property" asp-action="Index" class="btn btn-primary">View all properties</a>
            </div>
        </div>

        <div class="row">
            @foreach (var property in Model.FeaturedProperties)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow">
                        <a href="@Url.Action("Details", "Property", new { id = property.Id })" class="text-decoration-none">
                            <img src="@(string.IsNullOrEmpty(property.FeaturedImageUrl) ? "/images/img_1.jpg" : property.FeaturedImageUrl)"
