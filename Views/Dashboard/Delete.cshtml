@model RealEStateProject.ViewModels.User.UserProfileViewModel

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0">Confirm Deletion</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <h4>Warning!</h4>
                        <p>Are you sure you want to delete your account? This action cannot be undone.</p>
                        <p>All your data, including saved properties, favorites, and requests will be permanently removed.</p>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">First Name:</div>
                        <div class="col-md-8">@Model.FirstName</div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Last Name:</div>
                        <div class="col-md-8">@Model.LastName</div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Email:</div>
                        <div class="col-md-8">@Model.Email</div>
                    </div>

                    <form asp-action="DeleteConfirmed" method="post">
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="UserDashboard" asp-controller="Dashboard" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-danger">Delete Permanently</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>